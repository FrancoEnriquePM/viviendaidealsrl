<% layout('layout') %>

<h2 class="mt-4">Comisiones por Agente</h2>

<form method="GET" action="/reporte/comisiones" class="row g-3">
  <div class="col-md-6">
    <label for="agente" class="form-label">Nombre del agente</label>
    <input class="form-control" name="agente" placeholder="Ej: Paola" />
  </div>
  <div class="col-md-3 align-self-end">
    <button type="submit" class="btn btn-primary w-100">Filtrar</button>
  </div>
</form>

<hr class="my-4" />

<table class="table table-hover table-striped">
  <thead class="table-dark">
    <tr>
      <th>Agente</th>
      <th>Contratos</th>
      <th>Total Comisi√≥n (Bs)</th>
    </tr>
  </thead>
  <tbody>
    <% comisiones.forEach(a => { %>
    <tr>
      <td><%= a.nombre %></td>
      <td><%= a.contratos %></td>
      <td>Bs. <%= a.comision_total.toFixed(2) %></td>
    </tr>
    <% }) %>
  </tbody>
</table>
