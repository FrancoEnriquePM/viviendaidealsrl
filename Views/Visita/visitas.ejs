<% layout('layout') %>

<h2 class="mt-4">Visitas por Ciudad</h2>

<form method="GET" action="/reporte/visitas" class="row g-3">
  <div class="col-md-6">
    <label for="ciudad" class="form-label">Ciudad</label>
    <input class="form-control" name="ciudad" placeholder="Ej: Cochabamba" />
  </div>
  <div class="col-md-3 align-self-end">
    <button type="submit" class="btn btn-secondary w-100">Filtrar</button>
  </div>
</form>

<hr class="my-4" />

<table class="table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Direcci√≥n</th>
      <th>Ciudad</th>
      <th>Total Visitas</th>
    </tr>
  </thead>
  <tbody>
    <% visitas.forEach(v => { %>
    <tr>
      <td><%= v.direccion %></td>
      <td><%= v.ciudad %></td>
      <td><%= v.total_visitas %></td>
    </tr>
    <% }) %>
  </tbody>
</table>
